        <activity android:name=".SpectateTournament_akt"
            android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity android:name=".FindTournament_akt"
            android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity android:name=".ResumeTournament_akt"
            android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity android:name=".WelcomeSplash_atk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
